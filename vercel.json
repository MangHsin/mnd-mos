{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/images/(.*)", "dest": "/images/$1" },
    { "src": "/(js|css|img|fonts|favicon\\.ico)/(.*)", "dest": "/$1/$2" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 